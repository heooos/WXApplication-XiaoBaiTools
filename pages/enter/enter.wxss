/**enter.wxss**/

.container{
  background-image: url(http://ov73hrno9.bkt.clouddn.com/back.png);
}

.search{
  background-color: #fff;
  border-radius:50px;
  margin-top: 20rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  padding-left: 30rpx;
  box-shadow:2px 2px 5px #333333;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.placeholder{
  font-size: 30rpx;
}

.card{
  flex-grow: 1;
  margin-left: 50rpx;
  margin-right: 50rpx;
  width: 280rpx;
  height: 300rpx;
  background-color: #E6AB5F;
  box-shadow:2px 2px 10px #333333;
  border-radius:10px;
  display: flex;
  flex-direction: column;

}

.first-line{
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}

.second-line{
  display: flex;
  flex-direction: row;
  margin-top: 200rpx;
}

.card-title{
  background-color: #fff;
  text-align: center;
  font-size: 35rpx;
  color: #707D4B;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  font-weight: bold;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;

}

.text-detail{
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card-content{
  margin-left:20rpx;
  margin-right:20rpx;
  color:#fff;
  font-size:30rpx;
}


.bottom-text{
  height:100%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom:30rpx;
}

.placeholder-img{
  width:100%;
  height:100%;
  -webkit-transform:scale(0.7,0.7);
  -moz-transform:scale(0.7,0.7);
}